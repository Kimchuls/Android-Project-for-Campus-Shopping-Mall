<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/worklist_layoutContent">

    <TextView
        android:id="@+id/tv_worklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:background="?attr/colorPrimary"
        android:padding="10dp"
        android:textColor="@color/xui_config_color_white"
        android:text="新增人员"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_additem_1"
                style="@style/TextStyle.Content"
                android:text="请输入11位学号：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/et_studentid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    app:met_floatingLabel="highlight"/>

                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                    android:id="@+id/bt_check_studentid"
                    style="@style/RoundButton.Auto"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="手动校验" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_additem_2"
                style="@style/TextStyle.Content"
                android:text="请输入姓名：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    app:met_floatingLabel="highlight" />

                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                    android:id="@+id/bt_check_name"
                    style="@style/RoundButton.Auto"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="        " />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_additem_3"
                style="@style/TextStyle.Content"
                android:text="请输入就职门店：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    app:met_floatingLabel="highlight"/>

                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                    android:id="@+id/bt_check_email"
                    style="@style/RoundButton.Auto"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_additem_4"
                style="@style/TextStyle.Content"
                android:text="请点击生成随机密码：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/et_pwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    app:met_floatingLabel="highlight"/>

                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                    android:id="@+id/bt_check_pwd"
                    style="@style/RoundButton.Auto"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="密码生成" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_additem_5"
                style="@style/TextStyle.Content"
                android:text="请输入类别：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/et_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    app:met_floatingLabel="highlight"/>

                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                    android:id="@+id/bt_check_category"
                    style="@style/RoundButton.Auto"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="手动校验" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_additem_6"
                style="@style/TextStyle.Content"
                android:text="请输入图片地址：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/et_imageurl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    app:met_floatingLabel="highlight"/>

                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                    android:id="@+id/bt_check_imageurl"
                    style="@style/RoundButton.Auto"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="手动校验" />
            </LinearLayout>

            <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                android:id="@+id/bt_submit_item"
                style="@style/RoundButton.Auto"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="提交" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>