<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/xui_config_color_white" />

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:orientation="horizontal" >

        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/check_person_button"
            style="@style/RoundButton.Auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:text="工作人员名录"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/check_person_textView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="190dp"
            android:gravity="center_horizontal"
            android:text="查看工作人员相关信息和考勤记录"
            android:textSize="15dp"
            android:maxLines="2"/>

        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/check_item_button"
            style="@style/RoundButton.Auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="商品目录"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/check_item_textView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="340dp"
            android:gravity="center_horizontal"
            android:text="查看商品相关信息"
            android:textSize="15dp"
            android:maxLines="2"/>

    </FrameLayout>


</RelativeLayout>
